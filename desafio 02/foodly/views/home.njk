{% extends "layout.njk" %}

    {% block content %}
        <div class="container">
            <div class="card-about">
                <div class="card-about-infos">
                    <div class="card-text">
                        <h1>As melhores receitas</h1>
                        <p>Aprenda a construir os melhores pratos<br>
                        com receitas criadas por profissionais
                        <br>do mundo inteiro.</p>
                    </div> 
                    <div class="image-about">
                        <img src="/assets/chef.png" alt="">
                    </div> 
                </div>
            </div>

            <div class="wrapper">
                <h1 class="menu-type">Mais acessadas</h1>
                <div class="cards">
                    {% for recipe in recipes %}
                        <div class="card" id="{{loop.index0}}">
                            <img src="{{recipe.image}}" alt="{{recipe.title}}" class="card-image">
                            <h1 class="card-title">{{recipe.title}}</h1>
                            <p class="card-description">por {{recipe.author}}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endblock %}